---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: cilium-crds
  namespace: flux-system
spec:
  interval: 1h
  path: ./kubernetes/rpi-cluster/infrastructure/cilium/crds
  prune: true
  retryInterval: 2m
  sourceRef:
    kind: GitRepository
    name: flux-system
  timeout: 5m
  wait: true
