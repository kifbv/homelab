---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: cilium-crds
  namespace: flux-system
spec:
  decryption:
    provider: sops
    secretRef:
      name: flux-sops
  interval: 1h
  path: ./kubernetes/rpi-cluster/infrastructure/cilium/crds
  postBuild:
    substituteFrom:
      - kind: ConfigMap
        name: cluster-config
  prune: true
  retryInterval: 2m
  sourceRef:
    kind: GitRepository
    name: flux-system
  timeout: 5m
  wait: true
